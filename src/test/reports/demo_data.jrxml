<?xml version="1.0"?>
<!DOCTYPE jasperReport
        PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="Simple_Report">
    <parameter name="TITLE" class="java.lang.String"/>
    <queryString><![CDATA[select name, cost, email from sample_table]]></queryString>
    <field name="NAME" class="java.lang.String"/>
    <field name="COST" class="java.lang.Double"/>
    <field name="EMAIL"/>

    <title>
        <band height="50">
            <textField>
                <reportElement x="10" y="0" width="200" height="50" />
                <textFieldExpression class="java.lang.String">$P{TITLE}</textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band>
        </band>
    </pageHeader>

    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="10" y="0" width="180" height="20"/>
                <textElement>
                    <font isUnderline="true"/>
                </textElement>
                <text><![CDATA[NAME]]></text>
            </staticText>
            <staticText>
                <reportElement x="190" y="0" width="180" height="20"/>
                <textElement>
                    <font isUnderline="true"/>
                </textElement>
                <text><![CDATA[COST]]></text>
            </staticText>
            <staticText>
                <reportElement x="340" y="0" width="180" height="20"/>
                <textElement>
                    <font isUnderline="true"/>
                </textElement>
                <text><![CDATA[EMAIL]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="10" y="0" width="180" height="20"/>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{NAME}]]></textFieldExpression>
            </textField>
            <textField pattern="0.00">
                <reportElement x="190" y="0" width="180" height="20"/>
                <textFieldExpression class="java.lang.Double"><![CDATA[$F{COST}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="340" y="0" width="180" height="20"/>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{EMAIL}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <columnFooter>
        <band>
        </band>
    </columnFooter>

    <pageFooter>
        <band height="15">
            <staticText>
                <reportElement x="0" y="0" width="40" height="15"/>
                <textElement/>
                <text><![CDATA[Page:]]></text>
            </staticText>
            <textField>
                <reportElement x="40" y="0" width="100" height="15"/>
                <textElement/>
                <textFieldExpression class="java.lang.Integer"><![CDATA[$V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band>
        </band>
    </summary>

</jasperReport>